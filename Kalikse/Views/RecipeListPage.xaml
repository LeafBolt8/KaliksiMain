<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kalikse.Views.RecipeListPage"
             Title="Filtered Recipes"
             BackgroundImageSource="{AppThemeBinding Light=lightbackground.png, Dark=darkbackground.png}"  BackgroundColor="Transparent">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Development Reseed" Clicked="OnReseedClicked" Priority="0" Order="Primary" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,*">
        <Label Text="Your Filtered Recipes"
               Grid.Row="0"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="10"/>
        <VerticalStackLayout Grid.Row="1" Margin="10,0,0,0" Spacing="10">
            <Border Stroke="#B0B0B0" StrokeThickness="1" StrokeShape="RoundRectangle 8" WidthRequest="300" HorizontalOptions="Start" Shadow="None">
                <SearchBar x:Name="SearchBar"
                           Placeholder="Search recipes..."
                           TextChanged="OnSearchTextChanged"
                           WidthRequest="300"
                           HorizontalOptions="Start"
                           BackgroundColor="White"/>
            </Border>
            <Border Stroke="#B0B0B0" StrokeThickness="1" StrokeShape="RoundRectangle 8" WidthRequest="180" HorizontalOptions="Start" Shadow="None">
                <Picker x:Name="SortPicker"
                        Title="Sort by"
                        SelectedIndexChanged="OnSortChanged"
                        WidthRequest="180"
                        HorizontalOptions="Start"
                        BackgroundColor="White">
                    <Picker.Items>
                        <x:String>Name</x:String>
                        <x:String>Price - Highest to Lowest</x:String>
                        <x:String>Price - Lowest to Highest</x:String>
                    </Picker.Items>
                </Picker>
            </Border>
        </VerticalStackLayout>
        <CollectionView Grid.Row="2"
                       x:Name="RecipesCollection"
                       SelectionMode="Single"
                       SelectionChanged="OnRecipeSelected"
                       Margin="0,20,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="20,15,20,0"
                           Padding="10"
                           BorderColor="Gray"
                           CornerRadius="10">
                        <Grid ColumnDefinitions="Auto,*">
                            <Image Source="{Binding ImageUrl}"
                                   WidthRequest="100"
                                   HeightRequest="100"
                                   Aspect="AspectFill"
                                   Grid.Column="0"/>
                            <StackLayout Grid.Column="1"
                                       Margin="10,0,0,0">
                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding MaxPrice, StringFormat='â‚±{0:N2}'}"
                                       TextColor="Green"
                                       FontSize="16"/>
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage> 