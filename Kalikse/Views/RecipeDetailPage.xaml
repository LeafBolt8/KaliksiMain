<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Kalikse.Converters"
             x:Class="Kalikse.Views.RecipeDetailPage"
             Title="Recipe Details"
             BackgroundImageSource="{AppThemeBinding Light=lightbackground.png, Dark=darkbackground.png}"  BackgroundColor="Transparent">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StoreLogoConverter x:Key="StoreLogoConverter" />
            <!-- Your other converters -->
            <TapGestureRecognizer x:Key="MoreDetailsTapGesture" Tapped="OnMoreDetailsTapped" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Frame Margin="20"
               Padding="20"
               BorderColor="Gray"
               CornerRadius="10"
               HorizontalOptions="Center"
               WidthRequest="800">
            <StackLayout Spacing="15">
                <Image x:Name="RecipeImage"
                       HeightRequest="200"
                       Aspect="AspectFill"
                       HorizontalOptions="Center"/>

                <Label x:Name="RecipeName"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>

                <Label x:Name="PriceRange"
                       FontSize="18"
                       TextColor="Green"
                       HorizontalOptions="Center"/>

                <Label Text="Description"
                       FontSize="20"
                       FontAttributes="Bold"/>
                <Label x:Name="Description"
                       TextType="Html"/>

                <Label Text="Ingredients"
                       FontSize="20"
                       FontAttributes="Bold"/>
                <CollectionView x:Name="IngredientsList">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding Name}"
                                       VerticalOptions="Center"/>
                                <Label Grid.Column="1"
                                       Text="{Binding PriceRange}"
                                       TextColor="Green"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"/>
                                <Label Grid.Column="2"
                                       Text="More Details"
                                       TextColor="Blue"
                                       FontAttributes="Italic"
                                       VerticalOptions="Center"
                                       IsVisible="{Binding AvailableStore, Converter={StaticResource IsNotNullConverter}}">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnMoreDetailsTapped" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Store Branches Popup -->
                <Frame x:Name="BranchesPopup"
                       IsVisible="False"
                       Margin="0,10"
                       Padding="15"
                       BorderColor="Gray"
                       CornerRadius="10">
                    <StackLayout>
                        <Image x:Name="StoreLogoImage"
                               HeightRequest="40"
                               WidthRequest="40"
                               HorizontalOptions="Center"/>
                        <Label x:Name="StoreNameLabel"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <CollectionView x:Name="BranchesList">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Label Text="{Binding}"
                                           Padding="5"/>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <Button Text="Close"
                                Clicked="OnCloseBranchesPopup"
                                Margin="0,10,0,0"/>
                    </StackLayout>
                </Frame>

                <Label Text="Allergens"
                       FontSize="20"
                       FontAttributes="Bold"/>
                <CollectionView x:Name="AllergensList">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding}"
                                   Padding="5"
                                   TextColor="Red"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="Instructions"
                       FontSize="20"
                       FontAttributes="Bold"/>
                <Label x:Name="Instructions"
                       TextType="Html"/>
            </StackLayout>
        </Frame>
    </ScrollView>
</ContentPage> 