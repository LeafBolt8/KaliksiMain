<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kalikse.Views.RecipeDetailPage"
             Title="Recipe Details">

    <ScrollView>
        <StackLayout Padding="20">
            <Image x:Name="RecipeImage"
                   HeightRequest="250"
                   Aspect="AspectFill"
                   Margin="0,0,0,20"/>

            <Label x:Name="RecipeName"
                   FontSize="24"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>

            <Label x:Name="PriceRange"
                   FontSize="18"
                   TextColor="Green"
                   Margin="0,0,0,20"/>

            <Label Text="Description"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>
            <Label x:Name="Description"
                   Margin="0,0,0,20"/>

            <Label Text="Ingredients"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>
            <CollectionView x:Name="IngredientsList"
                           HeightRequest="200"
                           Margin="0,0,0,20">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}"
                               Margin="10,5"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="Instructions"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>
            <Label x:Name="Instructions"
                   Margin="0,0,0,20"/>

            <Label Text="Allergens"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>
            <CollectionView x:Name="AllergensList"
                           HeightRequest="100"
                           Margin="0,0,0,20">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}"
                               TextColor="Red"
                               Margin="10,5"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage> 