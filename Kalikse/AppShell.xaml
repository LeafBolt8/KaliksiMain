<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Kalikse" 
       x:Class="Kalikse.AppShell">

    <FlyoutItem Title="Dashboard" Route="MainDashboardPage">
        <ShellContent ContentTemplate="{DataTemplate local:MainDashboardPage}" />
    </FlyoutItem>

    <!-- Add the RecipeDetailPage to the Shell -->
    <ShellContent Title="Recipe Details" Route="RecipeDetailPage"
                  ContentTemplate="{DataTemplate local:RecipeDetailPage}" />
</Shell>
