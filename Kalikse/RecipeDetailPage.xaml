<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kalikse.RecipeDetailPage"
             Title="Recipe Details"
             BackgroundImageSource="{AppThemeBinding Light=lightbackground.png, Dark=darkbackground.png}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <!-- Recipe Image -->
            <Frame CornerRadius="15" Padding="0" HasShadow="True">
                <Image x:Name="RecipeImage" Aspect="AspectFill" HeightRequest="250"/>
            </Frame>

            <!-- Recipe Name -->
            <Label x:Name="RecipeName" FontSize="24" FontAttributes="Bold" 
                   TextColor="{AppThemeBinding Light=#1A237E, Dark={StaticResource PrimaryColor}}"/>

            <!-- Price Range -->
            <Label x:Name="PriceRange" FontSize="18" 
                   TextColor="{AppThemeBinding Light={StaticResource DarkText}, Dark={StaticResource LightText}}"/>

            <!-- Description -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}" 
                   CornerRadius="15" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Description" FontSize="18" FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light={StaticResource DarkText}, Dark={StaticResource LightText}}"/>
                    <Label x:Name="Description" FontSize="16" 
                           TextColor="{AppThemeBinding Light={StaticResource DarkText}, Dark={StaticResource LightText}}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Ingredients -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}" 
                   CornerRadius="15" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Ingredients" FontSize="18" FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light={StaticResource DarkText}, Dark={StaticResource LightText}}"/>
                    <CollectionView x:Name="IngredientsList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,Auto" Padding="5">
                                    <Label Text="{Binding Name}" FontSize="16" 
                                           TextColor="{AppThemeBinding Light={StaticResource DarkText}, Dark={StaticResource LightText}}"/>
                                    <Label Text="{Binding Quantity}" FontSize="16" Grid.Column="1" 
                                           TextColor="{AppThemeBinding Light={StaticResource DarkText}, Dark={StaticResource LightText}}"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>